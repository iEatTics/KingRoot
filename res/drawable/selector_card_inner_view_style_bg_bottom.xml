<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="@dimen/common_card_corner_radius" android:bottomRightRadius="@dimen/common_card_corner_radius" />
            <solid android:color="@color/card_btn_pressed" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <corners android:bottomLeftRadius="@dimen/common_card_corner_radius" android:bottomRightRadius="@dimen/common_card_corner_radius" />
            <solid android:color="@color/card_btn_pressed" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:bottomLeftRadius="@dimen/common_card_corner_radius" android:bottomRightRadius="@dimen/common_card_corner_radius" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>
</selector>